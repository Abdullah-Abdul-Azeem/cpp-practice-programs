#include <iostream>
using namespace std;
int main()
{
    int length, width, perimeter;
    cout<<"Please enter the length of the rectangle: ";
    cin>>length;
    cout<<"Please enter the width of the rectangle: ";
    cin>>width;
    perimeter = 2*length + 2*width;
    cout<<"The perimeter of the rectangle is: "<<perimeter;
    return 0;
}
